<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" verbose="1" name="Knowledge System Integration">
    <listeners>
        <listener class-name="com.biit.ks.core.TestListener"></listener>
    </listeners>

    <test name="Solr" enabled="true" preserve-order="true">
        <groups>
            <run>
                <exclude name="solrClients"/>
                <include name="seaweedClient"/>
            </run>
        </groups>
        <classes>
            <class name="com.biit.ks.core.solr.SolrClientTests"/>
            <class name="com.biit.ks.core.seaweed.SeaweedClientTests"/>
        </classes>
    </test>
</suite>
